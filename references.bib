issn = {2050084X},
journal = {eLife},
month = {feb},
publisher = {eLife Sciences Publications Ltd},
title = {{The impact of pathological high-frequency oscillations on hippocampal network activity in rats with chronic epilepsy}},
volume = {8},
year = {2019}
}
