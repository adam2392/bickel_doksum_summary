journal = {Epilepsy and Behavior},
keywords = {EEG,EEG-video-monitoring,Epilepsy,Epileptiform discharges,Invasive EEG},
number = {1},
pages = {22--33},
pmid = {19248841},
publisher = {Elsevier Inc.},
title = {{The role of EEG in epilepsy: A critical review}},
