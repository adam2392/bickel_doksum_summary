@article{Jeha2007,
abstract = {Frontal lobe epilepsy (FLE) surgery is the second most common surgery$\backslash$nperformed to treat pharmacoresistant epilepsy. Yet, little is known$\backslash$nabout long-term seizure outcome following frontal lobectomy. The$\backslash$naim of this study is to investigate the trends in longitudinal outcome$\backslash$nand identify potential prognostic indicators in a cohort of FLE patients$\backslash$ninvestigated using modern diagnostic techniques. We reviewed 70 patients$\backslash$nwho underwent a frontal lobectomy between 1995 and 2003 (mean follow-up$\backslash$n4.1 $\backslash$pm 3 years). Data were analysed using survival analysis and multivariate$\backslash$nregression with Cox proportional hazard models. A favourable outcome$\backslash$nwas defined as complete seizure-freedom, allowing for auras and seizures$\backslash$nrestricted to the first post-operative week. The estimated probability$\backslash$nof complete seizure-freedom was 55.7{\%} [95{\%} confidence interval (CI)$\backslash$n= 50--62] at 1 post-operative year, 45.1{\%} (95{\%} CI = 39--51) at 3 years,$\backslash$nand 30.1{\%} (95{\%} CI = 21--39) at 5 years. Eighty per cent of seizure$\backslash$nrecurrences occurred within the first 6 post-operative months. Late$\backslash$nremissions and relapses occurred, but were rare. After multivariate$\backslash$nanalysis, the following variables retained their significance as$\backslash$nindependent predictors of seizure recurrence: MRI-negative malformation$\backslash$nof cortical development as disease aetiology [risk ratio (RR) = 2.22,$\backslash$n95{\%} CI = 1.40--3.47], any extrafrontal MRI abnormality (RR = 1.75,$\backslash$n95{\%} CI = 1.12--2.69), generalized/non-localized ictal EEG patterns$\backslash$n(RR = 1.83, 95{\%} CI = 1.15--2.87), occurrence of acute post-operative$\backslash$nseizures (RR = 2.17, 95{\%} CI = 1.50--3.14) and incomplete surgical$\backslash$nresection (RR = 2.56, 95{\%} CI = 1.66--4.05) (log likelihood-ratio test$\backslash$nP-value {\textless} 0.0001). More than half of patients in favourable prognostic$\backslash$ncategories were seizure-free at 3 years, and up to 40{\%} were seizure-free$\backslash$nat 5 years, compared to {\textless}15{\%} in those with unfavourable outcome predictors.$\backslash$nThese data underscore the importance of appropriate selection of$\backslash$npotential surgical candidates.},
