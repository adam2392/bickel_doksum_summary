publisher = {Cold Spring Harbor Laboratory},
title = {{Local structural connectivity directs seizure spread in focal epilepsy}},
url = {https://www.biorxiv.org/content/10.1101/406793v1.full https://www.biorxiv.org/content/early/2018/09/04/406793},
